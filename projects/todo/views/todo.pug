doctype html
html
  head
    title the to do
  body
    h1 this is the to do application

    div
      p 
        button(onclick="reveal()" class="reveal") +
    div
      form(method="post" action="/todo")
        input(type="text" name="item")
        input(type="submit" value="submit")
    div
      if data.length > 0
        table
          each val in data
            tr
              td= val
              td
                button edit
              td 
                form()
                  input(type="text")
                  input(type="submit" value="submit")
              td
                a(href=`/todo/${val}`) delete
      else
        p there is no data available
